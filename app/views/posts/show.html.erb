<p id="notice"><%= notice %></p>

<p>
  <h3>Name:</h3>
  <%= @post.name %>
</p>
<p>
  <h3>Content:</h3>
  <%= @post.content %>
</p>
<% @post.tag_ids.each do |tag_id| %>
  <% @tag = Tag.find(tag_id) %>
  <%= @tag.name %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
